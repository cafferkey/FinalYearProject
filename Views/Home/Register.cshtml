@model FYP.Models.user

@{
    ViewBag.Title = "Login";
}


<style type="text/css">


    .styled-input input:focus ~ label {
        font-size: 14px;
        color: #3E8E94;
        top: -3.25rem;
        -webkit-transition: all 0.25s ease;
        transition: all 0.25s ease;
    }

    .styled-input input:hover ~ #bottombefore {
        background-color: #3e3e3e;
        -webkit-transition: all 0.25s ease;
        transition: all 0.25s ease;
    }

    .label-focused {
        font-size: 14px !important;
        color: #3E8E94 !important;
        top: -3.25rem !important;
    }

    .styled-input input ~ label {
        font-size: 20px;
        font-family: 'Roboto';
        font-weight: lighter;
        color: #999;
        padding: 1rem;
        position: absolute;
        top: 0;
        left: 0;
        -webkit-transition: all 0.25s ease;
        transition: all 0.25s ease;
        pointer-events: none;
    }

    .styled-input input:focus ~ .tspan {
        width: 100%;
        -webkit-transition: all 0.075s ease;
        transition: all 0.075s ease;
    }

    .styled-input {
        float: left;
        width: 280px;
        margin: 20px 0 20px;
        position: relative;
        display: block;
        background-color: white;
        border-top: 1px solid #999;
        border-right: 1px solid #999;
        border-left: 1px solid #999;
    }

        .styled-input.wide {
            width: 100%;
        }

        .styled-input input, .styled-input textarea {
            padding: 1rem 1rem;
            border: 0;
            width: 100%;
            font-size: 18px;
            background-color: transparent;
        }

            .styled-input input ~ .tspan {
                display: block;
                width: 0;
                height: 3px;
                background: #3E8E94;
                position: absolute;
                bottom: 0;
                left: 0;
                -webkit-transition: all 0.125s ease;
                transition: all 0.125s ease;
            }

    #bottombefore {
        display: block;
        height: 1px;
        background: #999;
        width: 100%;
    }

    input:focus {
        outline: 0;
    }

    /* CSS for Dropdown Select menus: */
    .ddselector {
        margin-top: 20px;
        width: 280px;
        height: 40px;
        padding-left: 10px;
        font-size: 16px;
        font-family: HelveticaNeue;
        color: #999;
    }

    .dd-selector-label {
        font-family: HelvNeueBold;
        color: #004480;
        background-color: transparent;
    }

    option:disabled {
        background-color: white;
        font-family: HelvNeueBold;
        color: #004480;
    }

    .hide-div {
        visibility: hidden;
    }

    #areaOption {
        float: left;
    }

    .form-box {
        width: 350px;
        height: 200px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 30px;
        padding-top: 20px;
    }
</style>



<h2 class="large-heading-sans" style="font-family: 'Merriweather'; padding-top: 35px;">Enter your details to sign up</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr class="hr" style="margin-top: 20px;" />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="login-div">

            <!-- Name div -->
            <div class="fcontainer">
                <div class="styled-input">
                    <input type="text" autocomplete="off" name="fullname" required />
                    <label>Full Name</label>
                    <div id="bottombefore"></div>
                    <span class="tspan"></span>
                </div>
            </div>


            <!-- Email div -->
            <div class="fcontainer">
                <div class="styled-input">
                    <input type="text" autocomplete="off" name="email" required />
                    <label>Email</label>
                    <div id="bottombefore"></div>
                    <span class="tspan"></span>
                </div>
            </div>

            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })


            <!-- Password div -->
            <div class="fcontainer">
                <div class="styled-input">
                    <input type="password" autocomplete="off" name="password" required />
                    <label>Password</label>
                    <div id="bottombefore"></div>
                    <span class="tspan"></span>
                </div>
            </div>

            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

            <!-- button-->
            <div class="form-group">
                <div style="margin-left: 120px;">
                    <input type="submit" value="Register" class="btn btn-default" />
                </div>
            </div>

        </div>

    </div>





}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




















