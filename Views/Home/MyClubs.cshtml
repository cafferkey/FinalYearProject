

@{
    ViewBag.Title = "My Clubs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .member-unit {
        border-bottom: 1px solid rgba(90, 90, 90, 0.20);
        width: 400px;
        margin-left: 350px;
        height: 65px;
        margin-bottom: 20px;
        padding-left: 25px;
        padding-top: 10px;
        -webkit-transition: ease 0.25s;
    }

        .member-unit:hover {
            border-bottom: 1px solid rgba(90, 90, 90, 0.75);
        }

    .name-span {
        font-family: 'Merriweather';
        font-weight: bold;
        margin-bottom: 5px;
    }

    .email-span {
        margin-top: 5px;
        font-family: 'roboto';
        font-weight: lighter;
        color: rgba(51, 51, 51, 0.75);
        display: inline-block;
    }

    .content-heading {
        text-align: left;
        margin-left: 175px;
        display: inline-block;
        kerning: -1px;
        font-family: 'Roboto';
        font-weight: bolder;
        margin-bottom: 50px;
    }

    a {
        text-decoration: none;
    }


</style>

<div style="margin-top: 30px;">

    <h4 class="content-heading">My Clubs</h4>

   @foreach (var club in Model) {

    <a href='@Url.Action("Details", "clubs", new { id = club.clubid })'>
        
        <div class="member-unit">



            <span class="name-span" style="text-decoration: none;">@club.clubname</span>
            <br />

            <span class="email-span" style="margin-top: 5px;">Members: @club.members.Count</span>


        </div>
    </a>
    }

</div>